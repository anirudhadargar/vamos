<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ManiPal</title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link href="/css/formstyle.css" rel="stylesheet" />
  
</head>

<body>
  <!-- Signup Form -->
  <div class="container forbox ">
    <div class="p-4 m-4 ">
      <div class="col-lg-5 mx-auto border rounded mt-20">
        <h3>
          <div class="alert hello" role="alert" style="background-color:#A683E3">
            Receiver Form
          </div>
        </h3>

        <form class="bg-light" method="post" action="/formPost">
          <!-- Hospital Name -->
          <div class="form-group m-1">
            <label for="firstname"><b>Hospital Name</b></label>
            <input class="form-control-sm form-control" id="" value="" name="firstname" placeholder="" type="text" />
          </div>

          <!-- Unique ID -->
          <div class="form-group m-1">
            <label for="lastname"><b>Category</b></label>
            <input class="form-control-sm form-control" id="" value="" name="lastname" placeholder="" type="text" />
          </div>

          <!-- Contact number -->
          <div class="form-group m-1">
            <label for="equipmentName"><b>Equipment Name</b></label>
            <input class="form-control-sm form-control" id="" value="" name="equipmentName" placeholder="" type="text" />
          </div>

          <!-- email -->
          <div class="form-group m-1">
            <label for="quantity"><b>Quantity</b></label>
            <input required class="form-control-sm form-control" id="" value="" name="quantity" placeholder="for example:8" type="number" autocomplete="off" />
          </div>

          <!-- password -->
          <!-- <div class="form-group m-1">
            <label for=""><b>Password</b></label>
            <input class="form-control-sm form-control" id="" name="password" placeholder="*******" type="password" />
          </div> -->

          <div class="input-group">
            <div class="input-group-text">
              <input class="form-check-input mt-0" type="checkbox" value=false aria-label="Checkbox for following text input" name="status">
              <label for="status"><b>Emergency</b></label>
            </div>
          </div>

          <div class="btns" role="group" aria-label="Basic example">
            <button type="submit" class="btn btn-primary">Back</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>